<a href="<%= href %>" class="card-base" style="padding: 2.5rem; display: block; text-decoration: none; color: inherit;">
    <div
        style="width: 56px; height: 56px; background: <%= color %>1a; border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-bottom: 1.5rem;">
        <i data-lucide="<%= icon %>" style="color: <%= color %>; width: 28px; height: 28px;"></i>
    </div>
    <h3 style="font-size: 1.25rem; margin-bottom: 0.5rem;">
        <%= title %>
    </h3>
    <p style="color: var(--text-secondary); font-size: 0.95rem;">
        <%= subtitle %>
    </p>
</a>